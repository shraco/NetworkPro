<GridPane alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Client">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="318.0" prefWidth="360.0">
         <children>
            <Label layoutX="142.0"
                   layoutY="14.0"
                   prefHeight="66.0"
                   prefWidth="95.0"
                   text="ATM"
                   textAlignment="CENTER"
                   textFill="#6567f5">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
            <Label layoutX="80.0" layoutY="111.0" prefHeight="32.0" prefWidth="62.0" text="User :">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="userField" layoutX="142.0" layoutY="111.0" prefHeight="32.0" prefWidth="163.0" />
            <Label layoutX="34.0" layoutY="191.0" text="Password : ">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <PasswordField fx:id="passField" layoutX="143.0" layoutY="191.0" prefHeight="32.0" prefWidth="92.0" />
            <Button fx:id="loginButton"
                    layoutX="143.0" layoutY="254.0"
                    mnemonicParsing="false"
                    onAction="#checkLogin"
                    prefHeight="32.0"
                    prefWidth="74.0"
                    text="LOGIN"
                    textFill="#505cfc" />
         </children></Pane>
   </children>
</GridPane>
